<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Answers - <%= question.title %> | Ummah Hub</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/css/qa-forum.css">
    <script>
        function deleteAnswer(answerId) {
            if (confirm('Are you sure you want to delete this answer? This action cannot be undone.')) {
                fetch(`/qaForum/<%= category %>/<%= question.id %>/answer/${answerId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        alert(data.error);
                    } else {
                        // Remove the answer from the DOM
                        const answerElement = document.querySelector(`[data-answer-id="${answerId}"]`);
                        if (answerElement) {
                            answerElement.remove();
                        }
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the answer.');
                });
            }
        }
    </script>
</head>
<body>
    <%- include('partials/header') %>

    <main>
        <section class="container">
            <div class="question-container">
                <h2><%= question.title %></h2>
                <div class="question-body"><%= question.body %></div>
                <div class="question-meta">
                    <span>Posted by <strong><%= question.author %></strong></span>
                    <span>on <%= new Date(question.created_at).toLocaleString() %></span>
                </div>
            </div>

            <div class="answers-section">
                <h3>Answers</h3>
                <% if (answers.length === 0) { %>
                    <p class="no-answers">No answers yet. Be the first to answer!</p>
                <% } else { %>
                    <% answers.forEach(answer => { %>
                        <div class="answer" data-answer-id="<%= answer.id %>">
                            <div class="answer-header">
                                <div class="answer-meta">
                                    <span class="answer-author"><%= answer.answer_author %></span>
                                    <span class="answer-date"><%= new Date(answer.created_at).toLocaleString() %></span>
                                </div>
                                <% if (answer.answer_author === userId) { %>
                                    <button onclick="deleteAnswer(<%= answer.id %>)" class="delete-btn" title="Delete answer">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                        </svg>
                                    </button>
                                <% } %>
                            </div>
                            <div class="answer-content">
                                <%= answer.answer %>
                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <div style="text-align: center; margin-top: 2rem;">
                <div class="button-group">
                    <a href="/qaForum/<%= category %>/<%= question.id %>" class="btn btn-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 12H5M12 19l-7-7 7-7"/>
                        </svg>
                        Back to Question
                    </a>
                    <a href="/qaForum/<%= category %>" class="btn btn-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 12H5M12 19l-7-7 7-7"/>
                        </svg>
                        Back to Forum
                    </a>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
</body>
</html>
