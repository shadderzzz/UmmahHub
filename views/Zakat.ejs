<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zakat Calculator</title>
    <link rel="stylesheet" href="/styles.css">
    <script>
        function calculateZakat() {
            let gold = parseFloat(document.getElementById("gold").value) || 0;
            let silver = parseFloat(document.getElementById("silver").value) || 0;
            let cash = parseFloat(document.getElementById("cash").value) || 0;
            let assets = parseFloat(document.getElementById("assets").value) || 0;
            let liabilities = parseFloat(document.getElementById("liabilities").value) || 0;

            let totalWealth = gold + silver + cash + assets - liabilities;
            let nisab = 612.36; // Nisab value in grams of silver

            if (totalWealth >= nisab) {
                let zakatAmount = totalWealth * 0.025; // 2.5% Zakat
                document.getElementById("zakatAmount").innerText = `Your Zakat Amount: $${zakatAmount.toFixed(2)}`;
            } else {
                document.getElementById("zakatAmount").innerText = "You are below the Nisab threshold, Zakat is not due.";
            }
        }
    </script>
</head>
<body>
    <header>
        <h1 class="title">Ummah Hub</h1>
        <nav>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/specialIslamicDays">Islamic Days</a></li>
                <li class="dropdown">
                    <a href="#">Forums</a>
                    <ul class="dropdown-menu">
                        <li><a href="/qaForum">Q&A Forum</a></li>
                        <li><a href="/duaForum">Dua Forum</a></li>
                    </ul>
                </li>
                <li><a href="/Hadiths">Hadiths</a></li>
                <li><a href="/Zakat">Zakat</a></li>
                <li><a href="/prayerTimes">Prayer Times</a></li>
                <% if (!userId) { %>
                    <li class="nav-right"><a href="/users/login" class="login-btn">Login</a></li>
                <% } else { %>
                    <li class="nav-right"><a href="/users/logout" class="logout-btn">Logout</a></li>
                <% } %>
            </ul>
        </nav>
    </header>

    <main>
        <section class="zakat-container">
            <h2>Zakat Calculator</h2>
            <p>Calculate your Zakat easily using our simple tool.</p>

            <div class="zakat-form">
                <label for="gold">Gold Value ($):</label>
                <input type="number" id="gold" placeholder="Enter amount in dollars">
                
                <label for="silver">Silver Value ($):</label>
                <input type="number" id="silver" placeholder="Enter amount in dollars">
                
                <label for="cash">Cash Savings ($):</label>
                <input type="number" id="cash" placeholder="Enter amount in dollars">
                
                <label for="assets">Other Assets ($):</label>
                <input type="number" id="assets" placeholder="Enter amount in dollars">
                
                <label for="liabilities">Liabilities/Debts ($):</label>
                <input type="number" id="liabilities" placeholder="Enter amount in dollars">
                
                <button onclick="calculateZakat()">Calculate Zakat</button>
            </div>

            <h3 id="zakatAmount">Your Zakat Amount: --</h3>
        </section>
    </main>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Ummah Hub. All rights reserved.</p>
    </footer>
</body>
</html>
